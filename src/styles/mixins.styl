//
// Mixins
// --------------------------------------------------

size()
  if length(arguments) == 1
    width: arguments[0]
    height: arguments[0]
  else
    width: arguments[0]
    height: arguments[1]

no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

-pos(type, args)
  i = 0
  position: unquote(type)
  for j in (1..4)
    if length(args) > i
      {args[i]}: args[i + 1] is a 'unit' ? args[i += 1] : 0
    i += 1

fixed()
  -pos('fixed', arguments)

absolute()
  -pos('absolute', arguments)

relative()
  -pos('relative', arguments)


border-1px($color, $left = 0, $right = 0)
  position : relative
  &::after
    content: ''
    absolute: left $left bottom 0 right $right
    border-top: 1px solid $color
    transform : scaleY(0.5)
